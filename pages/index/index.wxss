/**index.wxss**/
.header{
  position: relative;
  width: 100%;
  height: 420rpx;
  background-color: #ff0;
}
.wrap{
  position: absolute;
  top: 420rpx;
  width: 100%;
  background-color: #ecf3fd;
  overflow: hidden;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.player-container{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.player-container .options {
  display: flex;
  align-items: center;
}
.player-container .button {
  font-size: 50rpx;
}
.player-container .play{
  font-size: 86rpx;
  margin: 0 30rpx;
}
.player-container .info{
  display: flex;
}
.player-container .picture{
  width: 100rpx;
  height: 100rpx;
}
.player-container .picture image{
  max-width: 100%;
  max-height: 100%;
}
.song{
  padding: 30rpx 0;
  color: #8e9fcc;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}
.song-name{
  margin-left: 10rpx;
}